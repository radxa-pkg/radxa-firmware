[Unit]
Description=gdsp1rpc Service
Requires=dev-fastrpc\x2dgdsp1\x2dsecure.device
After=dev-fastrpc\x2dgdsp1\x2dsecure.device
SourcePath=/usr/lib/qcom-fastrpc1/gdsprpcd

[Service]
User=fastrpc
Group=fastrpc
Restart=always
ExecStartPre=+/bin/mkdir -p /usr/lib/dsp/gdsp1
ExecStartPre=+/bin/bash -c 'SOC=$(cat /sys/devices/soc0/soc_id); \
if [ "$SOC" = "676" ]; then \
    ln -sf /usr/share/qcom/qcs9075/Radxa/AIRbox-Q900/dsp/gdsp1/* /usr/lib/dsp/gdsp1; \
fi'

ExecStart=/usr/lib/qcom-fastrpc1/gdsprpcd rootpd gdsp1
